<% layout("/layouts/boilerplate.ejs") %>
<body>
  <form
    method="POST"
    action="/listings/<%=showlisting._id%>?_method=PUT"
    enctype="multipart/form-data"
    class="form-container"
  >
    <div class="form-group">
      <label for="title" class="form-label">Title</label>
      <input
        type="text"
        id="title"
        value="<%=showlisting.title%>"
        name="listing[title]"
        class="form-control"
        required
      />
    </div>
    <br />

    <div class="form-group">
      <label for="price" class="form-label">Price</label>
      <input
        type="number"
        id="price"
        value="<%=showlisting.price%>"
        name="listing[price]"
        class="form-control"
        required
      />
    </div>
    <br />
    <div class="form-group">
      <label for="description" class="form-label">Description</label>
      <textarea
        id="description"
        name="listing[description]"
        class="form-control"
        required
      >
<%=showlisting.description%></textarea
      >
    </div>
    <br />

    <div class="form-group">
      <label>Original Image</label>
      <div>
        <img src="<%=originalImage%>" class="original-image" />
      </div>
    </div>
    <br />
    <div class="form-group">
      <label for="newImage" class="form-label">Upload New Image</label>
      <input
        type="file"
        id="newImage"
        name="listing[image]"
        class="form-control"
      />
    </div>
    <br />
    <div class="form-group">
      <label for="location" class="form-label">Location</label>
      <input
        type="text"
        id="location"
        value="<%=showlisting.location%>"
        name="listing[location]"
        class="form-control"
        required
      />
    </div>
    <br />
    <div class="form-group">
      <label for="country" class="form-label">Country</label>
      <input
        type="text"
        id="country"
        value="<%=showlisting.country%>"
        name="listing[country]"
        class="form-control"
        required
      />
    </div>
    <br />
    <div class="form-group">
      <button type="submit" class="submit-button">Submit</button>
    </div>
  </form>
</body>
